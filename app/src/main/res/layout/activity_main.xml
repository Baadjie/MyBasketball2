<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#6699cc">

    <TextView
        android:id="@+id/timerValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="99dp"
        android:layout_marginTop="25dp"
        android:text="@string/timerVal"
        android:textSize="40sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/startButtonLabel"
        android:layout_marginStart="21dp"
        android:layout_alignBaseline="@+id/pauseButton"
        android:layout_alignBottom="@+id/pauseButton"
        android:layout_toEndOf="@+id/timerValue" />

    <Button
        android:id="@+id/pauseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pauseButtonLabel"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="54dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_above="@+id/button"
        android:layout_alignStart="@+id/pauseButton"
        android:onClick="sub"
        android:text="MINUS" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignBaseline="@+id/button3"
        android:layout_alignBottom="@+id/button3"
        android:layout_alignStart="@+id/button"
        android:onClick="sub2"
        android:text="MINUS" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_above="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:onClick="add"
        android:text="Add" />

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_above="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:onClick="add2"
        android:text="ADD" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:entries="@array/baji"
        android:layout_below="@+id/timerValue"
        android:layout_alignEnd="@+id/spinner2"
        android:layout_alignStart="@+id/spinner2" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="200dp"

        android:layout_height="wrap_content"
        android:entries="@array/pastor"
        android:layout_alignTop="@+id/textView3"
        android:layout_toEndOf="@+id/button6"
        android:layout_marginTop="13dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30dp"
        android:layout_alignBaseline="@+id/spinner"
        android:layout_alignBottom="@+id/spinner"
        android:layout_toStartOf="@+id/button6"
        android:layout_marginEnd="13dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30dp"
        android:layout_above="@+id/button7"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginBottom="32dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="V S"
        android:textSize="60dp"
        android:layout_above="@+id/textView3"
        android:layout_alignStart="@+id/spinner2"
        android:layout_marginBottom="22dp" />
</RelativeLayout>

